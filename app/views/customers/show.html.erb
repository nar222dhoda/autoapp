<table class="table table-hover">
   <thead>
     <tr>
       <th>Content</th>
       <th>Customer Detail</th>
     </tr>
   </thead>
   <tbody>
      <tr>
        <td>Firstname</td>
        <td><%=@customer.first_name%></td>
      </tr>
      <tr>
        <td>Lastname</td>
        <td><%=@customer.last_name%></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%=@customer.email%></td>
      </tr>
      <tr>
        <td>Phone</td>
        <td><%=@customer.phone%></td>
      </tr>
      <tr>
        <td>Address</td>
        <td><%=@customer.address%></td>
      </tr>
      <tr>
        <td>Last Visit Date</td>
        <td><%=@customer.last_visit_date%></td>
      </tr>
      <tr>
        <td colspan="2"><%= link_to 'Cars', cars_customer_path(@customer), class: 'btn btn-primary'%></td>
      </tr>
    </tbody>
 </table>
